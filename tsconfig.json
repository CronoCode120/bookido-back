{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "allowImportingTsExtensions": true
  },
  "lib": ["ES6", "ESNext"],
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
